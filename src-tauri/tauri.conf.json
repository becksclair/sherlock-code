{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "sherlock_code",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "shortDescription": "AI Code reviewer",
      "longDescription": "AI Powered code reviewer",
      "category": "Developer Tools",
      "copyright": "Copyright (c) 2023 Rebecca Clair. All rights reserved.",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "macOS": {
        "entitlements": "./Info.plist",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        }
      },
      "resources": [],
      "targets": "all",
      "identifier": "com.heliasar.sherlockcode",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Sherlock Code",
        "width": 800,
        "height": 600
      }
    ]
  }
}
